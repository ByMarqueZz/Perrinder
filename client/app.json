{
  "expo": {
    "name": "Perrinder",
    "slug": "Perrinder",
    "version": "1.0.0",
    "orientation": "portrait",
    "jsEngine": "hermes",
    "icon": "./assets/perricon.png",
    "userInterfaceStyle": "light",
    "plugin": [
      [
        "expo-image-picker",
        {
          "photosPermission": "The app accesses your photos to let you share them with your friends.",
          "savePhotosPermission": "Allow $(PRODUCT_NAME) to save photos."
        }
      ]
    ],
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.marquez.perrinder.ios",
      "infoPlist": {
        "NSCameraUsageDescription": "This app uses the camera to take pictures of pets",
        "NSPhotoLibraryUsageDescription": "This app uses the photo library to upload pictures of pets",
        "NSMicrophoneUsageDescription": "This app uses the microphone to record audio of pets",
        "NSLocationWhenInUseUsageDescription": "This app uses location services to find pets near you"
      
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.marquez.perrinder.android",
      "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "RECORD_AUDIO",
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "extra": {
      "eas": {
        "projectId": "4e0a0ec1-a536-4e61-bef0-2217c43a51c0"
      }
    }
  }
}
